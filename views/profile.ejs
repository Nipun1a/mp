<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center py-8">

    <!-- Profile Card -->
    <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-3xl">
        <!-- Profile Info -->
        <div class="flex items-center gap-6 mb-8">
            <!-- Profile Image -->
            <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-indigo-500 bg-gray-200 flex items-center justify-center text-gray-500">
                <% if (user.profileImage) { %>
                    <img src="<%= user.profileImage %>" alt="Profile Image" class="w-full h-full object-cover">
                <% } else { %>
                    <span class="text-sm">No Image</span>
                <% } %>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Welcome, <%= user.name %>!</h1>
                <p class="text-gray-500"><%= user.email %></p>
            </div>
        </div>

        <!-- âœ… Upload Form -->
        <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-8">
            <input type="file" name="profileImage" accept="image/*" required
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 
                          file:rounded-full file:border-0 file:text-sm file:font-semibold
                          file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
            <button type="submit"
                class="mt-3 px-6 py-2 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg shadow-md">
                Upload Profile Photo
            </button>
        </form>

        <!-- Create Post Form -->
        <form action="/post" method="POST" class="mb-8">
            <textarea name="postcontent" placeholder="What's on your mind?"
                class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none"
                required></textarea>
            <button type="submit"
                class="mt-3 px-6 py-2 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg shadow-md">
                Post
            </button>
        </form>

        <!-- Posts Section -->
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Your Posts</h2>
        <ul class="space-y-4">
            <% if (user.posts && user.posts.length > 0) { %>
                <% user.posts.forEach(function(post) { %>
                    <li class="bg-gray-50 p-4 rounded-lg shadow flex flex-col sm:flex-row sm:items-center sm:justify-between">
                        <div class="mb-3 sm:mb-0">
                            <strong class="text-gray-800"><%= post.content %></strong>
                            <p class="text-sm text-gray-500"><%= post.date.toDateString() %></p>
                        </div>

                        <div class="flex items-center gap-3">
                            <!-- Like/Unlike form -->
                            <form action="/like/<%= post._id %>" method="POST">
                                <button type="submit"
                                    class="px-4 py-1 rounded-lg text-sm 
                                           <%= post.likes.includes(user._id) ? 'bg-red-500 hover:bg-red-600 text-white' : 'bg-gray-200 hover:bg-gray-300 text-gray-800' %>">
                                    <%= post.likes.includes(user._id) ? 'Unlike' : 'Like' %>
                                    (<%= post.likes.length %>)
                                </button>
                            </form>

                            <!-- Edit link -->
                            <a href="/edit/<%= post._id %>"
                               class="px-4 py-1 bg-yellow-400 hover:bg-yellow-500 text-white rounded-lg text-sm">
                                Edit
                            </a>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="text-gray-500">No posts yet.</li>
            <% } %>
        </ul>

        <!-- Logout Button -->
        <div class="mt-8">
            <a href="/logout" class="text-red-500 hover:text-red-600 font-semibold">Logout</a>
        </div>
    </div>

</body>
</html>
